@page "{id}"
@model Echo.Pages.ExhibitInfoModel
@{
}

<div id="adminpage">
    <header>
        <nav class="adminheader">
            <a asp-area="" asp-page="/Admin"><img src="~/Images/LogoWhite.png" /></a>
            <div class="menulist">
                <ul>
                    <li><a asp-page="Admin">Hjem</a></li>
                    <li><a asp-page="AllExhibits">Udstillinger</a></li>
                    <li><a asp-page="Create">Opret Ny</a></li>
                </ul>

                <form method="post" asp-page-handler="search" class="adminsearch">
                    <input asp-for="SearchCriteria" type="number" minLength="4" placeholder="Indtast udstillingsnr..." /><button class="admininput" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
            </div>
            <div class="adminwarning"><span asp-validation-for="SearchCriteria" class="text-danger"></span></div>
        </nav>
    </header>
    <div class="admincontainer" id="breadcrumb">
        <div class="adminbreadcrumb">
            <a asp-area="" asp-page="/Admin"><i class="fa-solid fa-house" style="color: #000000;"></i></a>
            <p> > </p>
            <a asp-area="" asp-page="/AllExhibits">Udstillinger</a>
            <p> > </p>
            <a asp-area="" asp-page="/exhibitinfo" asp-route-id=@Model.Exhibit.ID style="font-weight:700">Udstilling @Model.Exhibit.ID</a>
        </div>
    </div>
        <div class="admincontainer">
        <div style="width:80%;">
            <h3>Viser</h3>
            <h2>Udstillingsinfo <span id="headerspan"> - Udstilling @Model.Exhibit.ID </span></h2>
        </div>
            
        <div class="adminbuttoncontainer">
            
            <a title="Vis udstilling" asp-page="/exhibit" asp-route-id="@Model.Exhibit.ID"><i class="fa-solid fa-eye"></i></a>
            <a title="Opdater udstilling" asp-page="/edit" asp-route-id="@Model.Exhibit.ID"><i class="fa-solid fa-file-pen"></i></a>
            <a id="deletetrashcan" title="Slet udstilling" asp-page="/delete" asp-route-id="@Model.Exhibit.ID"><i class="fa-solid fa-trash"></i></a>
        </div>

            <div class="admingrid-container">
                <div class="admingrid-item" style="grid-column: 1;">
                    <label asp-for="@Model.Exhibit.ID">Udstillings nr</label>
                </div>
                <div class="admingrid-item" style="grid-column: 2/4;">
                <p>@Model.Exhibit.ID</p>
                </div>

                <div class="admingrid-item"><label minLength="4" asp-for="@Model.Exhibit.Name">Udstillingsnavn</label></div>
                <div class="admingrid-item">
                    <label>Dansk</label><br />
                    <p>@Model.Exhibit.Name</p>
                </div>
                <div class="admingrid-item">
                    <label>Engelsk</label><br />
                    <p>@Model.Exhibit.Nameen</p>
                </div>
                <div class="admingrid-item">
                    <label asp-for="@Model.Exhibit.ID">Video/Lyd-fil</label>
                </div>
                <div class="admingrid-item">
                    <label>Dansk</label><br />
                    <video class="videopreview" controls><source src="@Model.Exhibit.Videourl" /></video>
                </div>
                <div class="admingrid-item">
                    <label>Engelsk</label><br />
                    <video class="videopreview" controls><source src="@Model.Exhibit.Videourlen" /></video>
                </div>
            </div>
        </div>

        <div class="admincontainer">

            <h3>Viser</h3>
            <h2>Udstillingsinfo <span id="headerspan"> - Artikel @Model.ArticleDa.Id & @Model.ArticleEn.Id</span></h2>
            <div class="admingrid-container">
                <div class="admingrid-item"><label>Navn</label></div>
                <div class="admingrid-item">
                    <label>Dansk</label><br />
                    <p>@Model.ArticleDa.Name</p>
                </div>
                <div class="admingrid-item">
                    <label>Engelsk</label><br />
                    <p>@Model.ArticleEn.Name</p>
                </div>
                    <div class="admingrid-item"><label>ID</label></div>
                    <div class="admingrid-item">
                        <label>Dansk</label><br />
                        <p>@Model.ArticleDa.Id</p>
                    </div>
                    <div class="admingrid-item">
                        <label>Engelsk</label><br />
                        <p>@Model.ArticleEn.Id</p>
                    </div>

                <div class="admingrid-item"><label>Artikel</label></div>
                <div class="admingrid-item">
                <label>Dansk</label><br /><br />

                <h2>@Model.ArticleDa.Header</h2>
                <hr style="border:2px black;" />
                <h3>@Model.ArticleDa.Subheader</h3>

                <p style="white-space: pre-line">@Model.ArticleEn.Bodytext</p>
                </div>
                <div class="admingrid-item">
                <label>Engelsk</label><br /><br />

                <h2>@Model.ArticleEn.Header</h2>
                <hr style="border:2px black;"/>
                <h3>@Model.ArticleDa.Subheader</h3>

                <p style="white-space: pre-line">@Model.ArticleEn.Bodytext</p>
                </div>
            </div>
        </div>
</div>